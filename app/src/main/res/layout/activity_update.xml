<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="onClickChooseImage"
    tools:context=".Update">

    <ImageButton
        android:id="@+id/ImagBD"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:src="@drawable/ic_baseline_account_circle_24" />

    <EditText
        android:id="@+id/UpdataName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ImagBD"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Name"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/UpdataSurname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/UpdataName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Surname"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/UpdataDolgnost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/UpdataSurname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Dolgnost"
        android:textColor="@color/black" />

    <LinearLayout
        android:id="@+id/Niz"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-2dp"
        android:background="@color/purple_200"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/Nazad"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="45dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="@color/zadni"
            android:onClick="onClickNAZAD"
            android:text="Назад"
            android:textColor="@color/white"
            app:cornerRadius="25dp"
            app:strokeColor="#7D8BE4"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/UpdateDATA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="45dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="@color/zadni"
            android:minHeight="48dp"
            android:onClick="onClickUpdate"
            android:text="Изменить"
            android:textColor="@color/white"
            app:cornerRadius="25dp"
            app:strokeColor="#7D8BE4"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/DeletData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="45dp"

            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="@color/zadni"
            android:minHeight="48dp"
            android:onClick="onClickDelet"
            android:text="Удалить"
            android:textColor="@color/white"
            app:cornerRadius="25dp"
            app:strokeColor="#7D8BE4"
            app:strokeWidth="1dp" />
    </LinearLayout>

</RelativeLayout>